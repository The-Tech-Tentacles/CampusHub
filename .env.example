# =================== DATABASE CONFIGURATION ===================
# Neon Database URL - Get this from your Neon dashboard
# Format: postgresql://username:password@hostname/database?sslmode=require
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-2.aws.neon.tech/campushub?sslmode=require

# =================== SERVER CONFIGURATION ===================
NODE_ENV=development
PORT=5000
API_VERSION=v1

# =================== FRONTEND CONFIGURATION ===================
# URL of your frontend application for CORS
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =================== JWT AUTHENTICATION ===================
# Generate a strong secret key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_replace_with_random_string
JWT_ACCESS_TOKEN_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# =================== SECURITY CONFIGURATION ===================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=your_session_secret_here
SESSION_EXPIRES_HOURS=24

# =================== FILE UPLOAD CONFIGURATION ===================
# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# File storage (choose one)
STORAGE_TYPE=local
# For local storage
UPLOAD_DIR=./uploads
# For cloud storage (Cloudinary, AWS S3, etc.)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# =================== NOTIFICATION CONFIGURATION ===================
# In-app notifications settings
NOTIFICATIONS_PER_PAGE=20
MAX_NOTIFICATIONS_PER_USER=1000
NOTIFICATION_CLEANUP_DAYS=90

# Real-time notifications (WebSocket)
ENABLE_WEBSOCKET=true
WEBSOCKET_PORT=5001

# =================== EMAIL CONFIGURATION (Optional) ===================
# For password reset emails, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@campushub.com
FROM_NAME=CampusHub

# =================== LOGGING CONFIGURATION ===================
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true

# =================== DEVELOPMENT CONFIGURATION ===================
# Enable detailed error messages in development
ENABLE_DEBUG=true
ENABLE_CORS=true

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=60000

# =================== CACHING CONFIGURATION (Optional) ===================
# Redis for caching (if using)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =================== MONITORING & ANALYTICS (Optional) ===================
# Application monitoring
SENTRY_DSN=your_sentry_dsn_here
ENABLE_ANALYTICS=false

# =================== BACKUP CONFIGURATION ===================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# =================== EXTERNAL SERVICES ===================
# Webhook URLs for integrations
WEBHOOK_SECRET=your_webhook_secret
DISCORD_WEBHOOK_URL=your_discord_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url

# =================== FEATURE FLAGS ===================
ENABLE_USER_REGISTRATION=true
ENABLE_FILE_UPLOADS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_MOBILE_NOTIFICATIONS=false